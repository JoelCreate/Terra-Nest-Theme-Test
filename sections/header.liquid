<header>
        <h1>{{ section.settings.header_text }}</h1>
</header>


<style>
    header {
        display: flex;
        justify-content: center;
        align-items: center;
        background: url('{{ section.settings.background_image | img_url: 'master' }}') center center no-repeat;
        width: 100%;
        height: 810px;
        max-height: 810px;
        background-size: cover;
    }
</style>


{% schema %}
{

    "name": "Header",
    "settings": 
    [
        {
            "type": "text",
            "id": "header_text",
            "label": "Header text",
            "default": "Welcome To My Shop"
        },
        {
            "type": "image_picker",
            "id": "background_image",
            "label": "Background image"
        }
    ]

}
{% endschema %}